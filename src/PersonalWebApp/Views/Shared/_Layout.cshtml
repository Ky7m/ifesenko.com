@using Microsoft.AspNetCore.Hosting
@using PersonalWebApp.Infrastructure.Settings
@inject Microsoft.Extensions.Options.IOptions<AppSettings> AppSettingsOptions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Igor Fesenko - Personal Site. I'm available for helping your team succeed. You can find details on the home page. Please feel free to contact me.">
    <meta name="keywords" content="Web Applications,Sites,Web Services,SOA,Security,Identity,Data Access,Integration,Databases,Desktop Applications,Cloud Computing,Mobile Client Applications,Big Data">
    <meta name="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewData["Title"]</title>
    <link rel="dns-prefetch" href="@AppSettingsOptions.Value.CdnUrl">
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
    <link rel="shortcut icon" href="@($"{AppSettingsOptions.Value.CdnUrl}/favicon.ico")" type="image/x-icon">
    <link rel="icon" href="@($"{AppSettingsOptions.Value.CdnUrl}/favicon.ico")" type="image/x-icon">
    <link rel="apple-touch-icon" href="@($"{AppSettingsOptions.Value.CdnUrl}/apple-touch-icon.png")">
    <environment names="@nameof(EnvironmentName.Development)">
        <link asp-append-version="true" rel="stylesheet" href="~/css/font-awesome.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/bootstrap.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/app.css" />
    </environment>
    <environment names="@nameof(EnvironmentName.Staging),@nameof(EnvironmentName.Production)">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" />
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" />
        <link asp-append-version="true" rel="stylesheet" href="@($"{AppSettingsOptions.Value.CdnUrl}/css/app.css")" />
    </environment>
    <environment names="@nameof(EnvironmentName.Production)">
        @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    </environment>
</head>
<body data-spy="scroll" data-target=".navbar-custom" data-offset="50">
    @RenderBody()
    <footer id="footer" role="contentinfo">
        <div class="container">
            <div class="row">
                <p class="copy text-center">
                    @Microsoft.Extensions.PlatformAbstractions.PlatformServices.Default.Application.ApplicationVersion
                </p>
            </div>
        </div>
    </footer>
    <environment names="@nameof(EnvironmentName.Development)">
        <script asp-append-version="true" src="~/js/jquery.js"></script>
        <script asp-append-version="true" src="~/js/backstretch.js"></script>
        <script asp-append-version="true" src="~/js/bootstrap.js"></script>
        <script asp-append-version="true" src="~/js/app.js"></script>
    </environment>
    <environment names="@nameof(EnvironmentName.Staging),@nameof(EnvironmentName.Production)">
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/danielgindi-jquery-backstretch/2.1.12/jquery.backstretch.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script asp-append-version="true" src="@($"{AppSettingsOptions.Value.CdnUrl}/js/app.js")"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>

@using System.Threading.Tasks
@using Microsoft.Extensions.Options
@using PersonalWebApp.Settings
@model PersonalWebApp.Models.HomeModel
@inject IOptions<AppSettings> AppSettings
@{
    ViewBag.Title = "Igor Fesenko - You're welcome!";
}
<div class="wrapper">
    <div id="loader">
        <div id="status">
            <div class="status-mes">
            </div>
        </div>
    </div>
    <header role="banner">
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#home" rel="noopener">Igor Fesenko</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#home" rel="noopener">Home</a></li>
                        <li><a href="#profile" rel="noopener">Profile</a></li>
                        <li><a href="#events" rel="noopener">Events</a></li>
                        <li><a href="\blog\" rel="noopener">Blog</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <section id="home" class="section" data-image-source="@AppSettings.Value.CdnEndpoint/images/background.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="hello">
                            <h1>Hi, I'm Igor Fesenko</h1>
                            <h3>
                                <span id="textrotator" class="remove-shadow">Microsoft® Most Valuable Professional | Create simple solutions to complex problems</span>
                            </h3>
                        </div>
                        <a href="#profile">
                            <div class="mouse-icon">
                                <div class="wheel"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <section id="profile-contact">
            @{await Html.RenderPartialAsync("Sections/QuickInformation");}
        </section>
        <section id="profile" class="section">
            @{await Html.RenderPartialAsync("Sections/Profile");}
        </section>
        <section id="events" class="section">
            @{await Html.RenderPartialAsync("Sections/Events", Model);}
        </section>
        <section id="certifications" class="callout">
            @{await Html.RenderPartialAsync("Sections/Certifications");}
        </section>
    </main>
</div>
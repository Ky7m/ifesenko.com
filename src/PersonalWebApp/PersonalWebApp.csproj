<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Version>255.255.255.255</Version>
    <LangVersion>8</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <Content Update="Blog\**\*" CopyToPublishDirectory="false" />
    <Content Remove="**\*-lock.json" />
    <Content Update="**\*.json" CopyToPublishDirectory="false" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NWebsec.AspNetCore.Middleware" Version="2.0.0" />
    <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.12.0-beta2" />
  </ItemGroup>
  <Target Name="PrepublishScript" BeforeTargets="PrepareForPublish">
    <Exec Command="node_modules/.bin/gulp build" />
  </Target>
</Project>
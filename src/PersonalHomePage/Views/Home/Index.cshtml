@model HomeModel
@{
    ViewBag.Title = "Igor Fesenko - You're welcome!";
}
<div class="wrapper">
    <div id="loader">
        <div id="status">
            <div class="status-mes">
            </div>
        </div>
    </div>
    <header role="banner">
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#home">Igor Fesenko</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#home">Home</a></li>
                        <li><a href="#profile">Profile</a></li>
                        <li><a href="#events">Events</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <section id="home" class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="hello">
                            <h1>Hi, I'm Igor Fesenko</h1>
                            <h3>
                                <span class="remove-shadow" data-bind="textrotator: {separator:'|', speed:3000}">Microsoft Certified Solutions Developer. | Create simple solutions to complex problems.</span>
                            </h3>
                        </div>
                        <a href="#profile">
                            <div class="mouse-icon">
                                <div class="wheel"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <section id="profile-contact">
            @{Html.RenderPartial("Sections/QuickInformation");}
        </section>
        <section id="profile" class="section">
            @{Html.RenderPartial("Sections/Profile");}
        </section>
        <section id="stats" class="callout">
            @{Html.RenderPartial("Sections/Stats", Model.Stats);}
        </section>
        <section id="events" class="section">
            @{Html.RenderPartial("Sections/Events");}
        </section>
        <section id="certifications" class="callout">
            @{Html.RenderPartial("Sections/Certifications");}
        </section>
        <section id="contact" class="section">
            @{Html.RenderPartial("Sections/Contact");}
        </section>
    </main>
</div>